{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "pages:build": "pnpm next-on-pages",
    "preview": "pnpm pages:build && wrangler pages dev",
    "deploy": "pnpm pages:build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "format": "biome format --write ./src tsconfig.json biome.json tailwind.config.ts postcss.config.mjs components.json",
    "lint": "biome lint --write ./src tsconfig.json biome.json tailwind.config.ts postcss.config.mjs components.json",
    "check": "biome ci --formatter-enabled=true --linter-enabled=true --organize-imports-enabled=false ./src tsconfig.json biome.json tailwind.config.ts postcss.config.mjs components.json"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "next": "15.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/next-on-pages": "1",
    "@cloudflare/workers-types": "^4.20250204.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vercel": "^41.0.2",
    "wrangler": "^3.107.3"
  },
  "packageManager": "pnpm@10.2.1"
}
